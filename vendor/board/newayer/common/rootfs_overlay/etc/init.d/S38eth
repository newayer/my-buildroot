#!/bin/sh

start() {
    echo -n "Start eth config: "

    ifconfig eth0 192.168.117.136
    ifconfig eth1 192.168.118.136
    echo "OK"
}

stop() {
    printf "Stopping eth config: "
    echo "OK"
}

restart() {
    echo -n "restart eth config: "
    stop
    start
}

case "$1" in
  start)
     start
     ;;
  stop)
     stop
     ;;
  restart|reload)
     restart
     ;;
  *)
     echo "Usage: $0 {start|stop|restart}"
     exit 1
esac

exit $?

