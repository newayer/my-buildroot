#!/bin/sh
#
# pppd        Starts pppd.
#

start() {
    mkdir -p /opt/logs
    printf "Starting pppd: "
    /usr/bin/pon wcdma >> /opt/logs/main_error.log 2>&1 &
    touch /var/lock/pppd
    echo "OK"
}
stop() {
    printf "Stopping pppd: "
    /usr/bin/poff >> /opt/logs/main_error.log 2>&1
    rm -f /var/lock/pppd
    echo "OK"
}
restart() {
    stop
    sleep 3
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?

