#!/bin/sh

start() {
    echo -n "Start daemon: "
    /usr/bin/wifi-check.sh &
    /usr/bin/daemon.sh &
    echo "OK"
}

stop() {
    echo -n "Stop daemon: "
    kill -9 `pidof daemon.sh` > /dev/null 2>&1
    kill -9 `pidof wifi-check.sh` > /dev/null 2>&1
    echo "OK"
}

restart() {
    echo -n "restart daemon: "
    stop
    start
}

case "$1" in
  start)
     start
     ;;
  stop)
     stop
     ;;
  restart|reload)
     restart
     ;;
  *)
     echo "Usage: $0 {start|stop|restart}"
     exit 1
esac

exit $?

