#!/bin/sh

start() {
    printf "Starting wpa_supplicant: "
    start-stop-daemon -S -q -m -b -p /var/run/wpa_supplicant.pid \
        --exec /usr/sbin/wpa_supplicant \
        -- -Dnl80211 -iwlan0 -c/etc/wpa_supplicant.conf
    [ $? = 0 ] && echo "OK" || echo "FAIL"
}

stop() {
    printf "Stopping wpa_supplicant: "
    start-stop-daemon -K -q -p /var/run/wpa_supplicant.pid
    [ $? = 0 ] && echo "OK" || echo "FAIL"
}

restart() {
    stop
    sleep 3
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
