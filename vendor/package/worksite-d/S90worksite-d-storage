#!/bin/sh
#
# Starts storage.
#
NAME=storage
PIDFILE=/var/run/$NAME.pid
DAEMON=/usr/bin/storage
DAEMON_ARGS=

start() {
    printf "Starting $NAME: "
    echo 1048576 > /proc/sys/net/core/rmem_max
    mkdir -p /opt/logs
    start-stop-daemon -S -q -m -b -p $PIDFILE --startas /bin/bash -- -c "exec $DAEMON $DAEMON_ARGS"
    status=$?
    if [ "$status" -eq 0 ]; then
        echo "OK"
    else
        echo "FAIL"
    fi
    return "$status"
}

stop() {
    printf "Stopping $NAME: "
    start-stop-daemon -K -q -p $PIDFILE
    status=$?
    if [ "$status" -eq 0 ]; then
        rm -f "$PIDFILE"
        echo "OK"
    else
        echo "FAIL"
    fi
    return "$status"
}

restart() {
    stop
    sleep 3
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
